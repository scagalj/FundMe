@model FundMe.Models.ApplicationUser
@{
    ViewBag.Title = "My Details";
}
<h2>@ViewBag.Title</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
        @Html.DisplayFor(model => model.Adress)
        <dt>
            Password
        </dt>
        <dd>
            @Html.ActionLink("Change your password", "ChangePassword")
        </dd>
    </dl>
</div>

<h2>Campaigns: </h2>
<hr />

@if (ViewBag.Count <= 0)
{
    <p>You don't have any Campaigns</p>
}
else
{
    <table>
        @foreach (var item in ViewBag.Campaigns)
        {

            <tr><td>
            <h4> @Html.ActionLink((string)item.Title, "Details", "Campaigns", new { id = item.ID }, null)</h4>
            @Html.ActionLink("Edit", "Edit", "UserCampaigns", new { id = item.ID }, new { @class = "btn btn-success"})
            @Html.ActionLink("Delete", "Delete", "UserCampaigns", new { id = item.ID }, new { @class = "btn btn-danger" })</td></tr>

        }
    </table>
}