@model IEnumerable<FundMe.Models.Image>

@{
    ViewBag.Title = "List of Images";
}


<h2>@ViewBag.Title</h2>
<div>
    @Html.ActionLink("Upload Image", "Upload", null, new { @class = "btn btn-success" })
</div>
<hr />



<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-2 col-sm-4 col-xs-6" style="padding-bottom:20px;">
                <img src="@Url.Content(String.Format("{0}{1}", ViewBag.Path, item.FileName))" style="width:90px;height:90px;" />
                <div>
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </div>
            </div>

        }
    </div>
</div>

